{
  "tests": [
    {
      "name": "Register new user",
      "method": "POST",
      "path": "/?action=register",
      "body": {
        "email": "test@example.com",
        "password": "password123",
        "fullName": "Test User",
        "role": "operator"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "user": "object",
        "token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login user",
      "method": "POST",
      "path": "/?action=login",
      "body": {
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "user": "object",
        "token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Get all users",
      "method": "GET",
      "path": "/?action=getUsers",
      "headers": {
        "X-Auth-Token": "test-token"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "users": "array"
      },
      "bodyMatcher": "partial"
    }
  ]
}
